{
  "manifest_version": 3,
  "name": "Image Size Downloader",
  "description": "Monitors image requests and saves large images with sequential filenames.",
  "version": "1.0.0",
  "permissions": ["downloads", "storage", "webRequest"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "action": {
    "default_title": "Image Size Downloader"
  }
}
